<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="debo.win.popmovies.DetailFragment"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        card_view:cardElevation="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="7dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="25sp"
                android:fontFamily="casual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/movieTitleColor"
                android:textStyle="bold"
                android:id="@+id/movie_title"
                android:gravity="start" />

            <View
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="2dp"
                android:layout_height="1dp"
                android:id="@+id/movie_detail_separator"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:id="@+id/movie_poster"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/movie_poster"
                    android:layout_weight="1" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="casual"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:id="@+id/movie_release_date"
                        android:gravity="end|center_vertical" />

                    <TextView
                        android:textColor="@color/colorAccent"
                        android:fontFamily="casual"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:id="@+id/movie_vote_average"
                        android:gravity="end|center_vertical" />

                    <TextView
                        android:textColor="@color/colorAccent"
                        android:fontFamily="casual"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:id="@+id/movie_popularity"
                        android:gravity="end|center_vertical" />

                    <TextView
                        android:textColor="@color/colorAccentDuo"
                        android:fontFamily="casual"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:id="@+id/movie_language"
                        android:gravity="end|center_vertical" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        card_view:contentPadding="7dp"
        card_view:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/movie_synopsis_label"
                android:layout_width="match_parent"
                android:fontFamily="casual"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="start"
                android:id="@+id/movie_synopsis_label" />

            <View
                android:layout_width="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_height="1dp"
                android:id="@+id/movie_detail_separator_2"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:textSize="15sp"
                android:gravity="start"
                android:id="@+id/movie_synopsis" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
